<idea-plugin>

  <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
  <id>org.c3lang.c3intellij</id>

  <!-- Text to display as name on Preferences/Settings | Plugin page -->
  <name>C3</name>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Text to display as description on Preferences/Settings | Plugin page -->
  <description>
    <![CDATA[
      Support for the C3 Language
    ]]>
  </description>
  <change-notes>
    <![CDATA[
      <ul>
        <li><b>0.0.1</b> Unfinished.</li>
      </ul>
    ]]>
  </change-notes>

  <!-- Text to display as company information on Preferences/Settings | Plugin page -->
  <vendor url="https://www.c3-lang.org">C3 Lang</vendor>

  <extensions defaultExtensionNs="com.intellij">
    <fileType name="C3 File" implementationClass="org.c3lang.intellij.C3SourceFileType" fieldName="INSTANCE"
              language="C3" extensions="c3"/>
    <lang.parserDefinition language="C3" implementationClass="org.c3lang.intellij.parser.C3ParserDefinition"/>
    <lang.syntaxHighlighterFactory language="C3"
                                   implementationClass="org.c3lang.intellij.C3SyntaxHighlighterFactory"/>

    <colorSettingsPage implementation="org.c3lang.intellij.C3ColorSettingsPage"/>

